<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2><%= t("edit_vip_title") %></h2>
</div>
<form class="form-horizontal" action="/admin/panel/vips/edit/<%= vipType._id %>?_method=put" method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <%- include(viewDir("layouts/showMessage")) -%>

    <div class="form-group row mb-3">
        <div class="col">
            <label for="name" class="control-label font-weight-bold mb-1"><%= t("form_title") %></label>
            <input type="text" class="form-control" name="name" id="name"
                   placeholder="<%= t("new_vip_type_title_placeholder") %>"
                   value="<%= oldData('name', vipType.name) %>" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col">
            <label for="months" class="control-label font-weight-bold mb-1"><%= t("months_count") %></label>
            <input type="number" class="form-control" name="months" id="months" placeholder="3"
                   value="<%= oldData('months', vipType.months) %>" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col">
            <label for="price" class="control-label font-weight-bold mb-1"><%= t("form_Price") %></label>
            <input type="text" class="form-control" name="price" id="price" placeholder="150000"
                   value="<%= oldData('price', vipType.price) %>" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger"><%= t("send_form") %></button>
        </div>
    </div>
</form>