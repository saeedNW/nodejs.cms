<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش دوره</h2>
</div>
<form class="form-horizontal" action="/admin/panel/courses/edit/<%= course._id %>?_method=put" method="post"
      enctype="multipart/form-data" novalidate>

    <%- include(viewDir("layouts/showMessage")) -%>

    <div class="form-group row mb-3">
        <div class="col">
            <label for="title" class="control-label font-weight-bold mb-1">عنوان دوره</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="دوره پروژه محور node js"
                   value="<%= oldData('title', course.title) %>" required>
        </div>
        <div class="col">
            <label for="slug" class="control-label font-weight-bold mb-1">نامک دوره</label>
            <input type="text" class="form-control" name="slug" id="slug"
                   placeholder="node-js-course" value="<%= oldData('slug', course.slug) %>" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col">
            <label for="paymentType" class="control-label font-weight-bold mb-1">نوع دوره</label>
            <select name="paymentType" id="paymentType" class="form-control" required>
                <option value="none">انتخاب نوع پرداخت</option>
                <option value="vip" <%= oldData('paymentType', course.paymentType) === 'vip' ? 'selected' : '' %>>اعضای
                    ویژه
                </option>
                <option value="cash" <%= oldData('paymentType', course.paymentType) === 'cash' ? 'selected' : '' %>>
                    نقدی
                </option>
                <option value="free" <%= oldData('paymentType', course.paymentType) === 'free' ? 'selected' : '' %>>
                    رایگان
                </option>
            </select>
        </div>

        <div class="col">
            <label for="categories" class="control-label font-weight-bold mb-1">دسته بندی ها</label>
            <select name="categories" id="categories" class="form-control form-control-chosen"
                    data-placeholder="انتخاب دسته بندی" required multiple>
                <% for (const category of categories){ %>
                    <option value="<%= category._id %>"
                            <%= course.categories.indexOf(category._id) !== -1 ? 'selected' : '' %> >
                        <%= category.name %>
                    </option>
                <% } %>
            </select>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col">
            <label for="description" class="control-label font-weight-bold mb-1">توضیحات</label>
            <textarea rows="10" class="form-control cke_rtl" name="description" id="description"
                      placeholder="توضیحات دوره" required><%= oldData('description', course.description) %></textarea>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col">
            <label for="images" class="control-label font-weight-bold mb-1">تصویر دوره</label>
            <input type="file" class="form-control" name="images" id="images">
        </div>
    </div>
    <div class="form-group row mb-3">
        <% Object.entries(course.images).forEach(([size, image]) => { %>
            <div class="col-sm-2">
                <label class="control-label">
                    <%= size %>
                    <input type="radio" name="imagesThumb" value="<%= image %>"
                            <%= course.thumbnail === image ? "checked" : "" %>>
                    <a href="<%= image %>" target="_blank"><img src="<%= image %>" width="100%"></a>
                </label>
            </div>
        <% }) %>
    </div>
    <div class="form-group row mb-3">
        <div class="col">
            <label for="price" class="control-label font-weight-bold mb-1">قیمت</label>
            <input type="text" class="form-control" name="price" id="price"
                   value="<%= oldData('price', course.price) %>" placeholder="قیمت ها را وارد کنید" required>
        </div>
        <div class="col">
            <label for="tags" class="control-label font-weight-bold mb-1">تگ ها</label>
            <input type="text" class="form-control text-end dir-ltr" name="tags" id="tags"
                   placeholder="nodejs, backend, programming" value="<%= oldData('tags', course.tags) %>" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">ارسال</button>
        </div>
    </div>
</form>


<link rel="stylesheet" href="/css/admin/component-chosen.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.6/chosen.jquery.min.js"></script>
<script src="/js/admin/createCourse.js"></script>
<script>
    $('.form-control-chosen').chosen({
        // Chosen options here
    });

    // Replace the <textarea> with a CKEditor 4
    // instance, using default configuration.
    CKEDITOR.replace('description', {
        filebrowserUploadUrl: '/admin/panel/ckEditor-uploader',
        contentsLangDirection:"rtl"
    });
</script>