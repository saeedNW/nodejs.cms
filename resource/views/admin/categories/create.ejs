<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>افزودن دسته بندی</h2>
</div>
<form class="form-horizontal" action="/admin/panel/categories/create" method="post">

    <%- include(viewDir("layouts/showMessage")) -%>

    <div class="form-group row mb-3">
        <div class="col">
            <label for="name" class="control-label font-weight-bold mb-1">عنوان دسته بندی</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="nodejs"
                   value="<%= oldData('name') %>" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col">
            <label for="parent" class="control-label font-weight-bold mb-1">دسته بندی والد</label>
            <select name="parent" id="parent" class="form-control" required>
                <option value="none">دسته اصلی</option>
                <% for (const category of categories) { %>
                    <option value="<%= category._id %>" <%= String(oldData('parent')) === String(category._id) ? 'selected' : '' %>><%= category.name %></option>
                <% } %>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">ارسال</button>
        </div>
    </div>
</form>