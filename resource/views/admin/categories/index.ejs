<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>دسته ها</h2>
    <div class="btn-group">
        <a href="/admin/panel/categories/create" class="btn btn-sm btn-primary me-1">افزودن دسته جدید</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>#</th>
            <th>کد شناسایی</th>
            <th>عنوان</th>
            <th>والد</th>
            <th>تنظیمات</th>
        </tr>
        </thead>
        <tbody>
        <% if (categories.docs.length > 0){ %>
            <% for (const category of categories.docs) { %>
                <tr>
                    <th scope="row"><%= categories.pagingCounter %></th>
                    <th><%= category.hashId %></th>
                    <td><a href="#"><%= category.name %></a></td>
                    <td><%- category.parent ? `<a href="#">${category.parent.name}</a>` : "دسته بندی اصلی" %></td>
                    <td>
                        <form action="/admin/panel/categories/delete/<%= category._id %>?_method=DELETE" method="post">
                            <input type="hidden" name="_token" value="Dso45XzqoXsAkRC8BBMQ63ZsOFS0c2tELkxR4i3Y">
                            <div class="btn-group btn-group-sm">
                                <a href="/admin/panel/categories/edit/<%= category._id %>" class="btn btn-primary me-1">ویرایش</a>
                                <button type="submit" class="btn btn-danger">حذف</button>
                            </div>
                        </form>
                    </td>
                </tr>
            <%
                +categories.pagingCounter++
            }
            %>
        <% }else { %>
            <tr>دسته ای برای نمایش وجود ندارد</tr>
        <% } %>
        </tbody>
    </table>

    <%- include(viewDir("layouts/pagination"), {pagination:categories}) -%>

</div>

