<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش کاربر</h2>
</div>
<form class="form-horizontal" action="/admin/panel/users/edit/<%= user._id %>?_method=put" method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <%- include(viewDir("layouts/showMessage")) -%>


    <div class="form-group">
        <label for="name" class="control-label mb-2">نام کامل</label>
        <input id="name" type="text" class="form-control" name="name"
               value="<%= oldData('name', user.name) %>" required autofocus>
    </div>

    <div class="form-group mt-3">
        <label for="email" class="control-label mb-2">آدرس ایمیل</label>
        <input id="email" type="email" class="form-control" name="email"
               value="<%= oldData('email', user.email) %>" required>
    </div>

    <div class="form-group mt-3">
        <label for="password" class="control-label mb-2">پسورد</label>
        <input id="password" type="password" class="form-control" name="password"
               value="<%= oldData("password") %>">
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-danger">ارسال</button>
    </div>
</form>


<link rel="stylesheet" href="/css/admin/component-chosen.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.6/chosen.jquery.min.js"></script>
<script src="/js/admin/createCourse.js"></script>
<script>
    $('.form-control-chosen').chosen({
        // Chosen options here
    });

    // Replace the <textarea> with a CKEditor 4
    // instance, using default configuration.
    CKEDITOR.replace('description', {
        filebrowserUploadUrl: '/admin/panel/ckEditor-uploader',
        contentsLangDirection: "rtl"
    });
</script>