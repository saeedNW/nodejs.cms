<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>افزودن کاربر</h2>
</div>
<form class="form-horizontal" action="/admin/panel/users/create" method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <%- include(viewDir("layouts/showMessage")) -%>

    <div class="form-group">
        <label for="name" class="control-label mb-2">نام کامل</label>
        <input id="name" type="text" class="form-control" name="name"
               value="<%= oldData('name') %>" required autofocus>
    </div>

    <div class="form-group mt-3">
        <label for="email" class="control-label mb-2">آدرس ایمیل</label>
        <input id="email" type="email" class="form-control" name="email"
               value="<%= oldData('email') %>" required>
    </div>

    <div class="form-group mt-3">
        <label for="password" class="control-label mb-2">پسورد</label>
        <input id="password" type="password" class="form-control" name="password" required>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">ارسال</button>
    </div>
</form>