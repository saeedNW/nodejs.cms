<div class="row pt-3 justify-content-center">
    <div class="col-8">
        <div class="card card-default">
            <div class="card-header"><h5>بازیابی رمز عبور</h5></div>
            <div class="card-body">
                <form class="form-horizontal" role="form" method="POST" action="/auth/reset/password" novalidate>

                    <%- include(viewDir("layouts/showMessage")) -%>

                    <div class="form-group mt-3">
                        <label for="password" class="control-label">پسورد</label>
                        <input id="password" type="password" class="form-control" name="password" required>
                    </div>

                    <div class="form-group mt-3">
                        <%- captcha %>
                    </div>

                    <input type="hidden" name="token" value="<%= token %>">

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">
                            ثبت
                        </button>
                        <a class="btn btn-link" href="/auth/login">
                            بازگشت به صفحه ورود
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>