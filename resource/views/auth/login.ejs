<div class="row pt-3 justify-content-center">
    <div class="col-8">
        <div class="card card-default">
            <div class="card-header"><h5>ورود</h5></div>
            <div class="card-body">
                <form class="form-horizontal" role="form" method="POST" action="/auth/login">

                    <%- include(viewDir("layouts/showMessage")) -%>

                    <div class="form-group">
                        <label for="email" class="control-label">آدرس ایمیل</label>
                        <input id="email" type="email" class="form-control" name="email"
                               value="<%= oldData('email') %>" required autofocus>
                    </div>

                    <div class="form-group mt-3">
                        <label for="password" class="control-label">پسورد</label>
                        <input id="password" type="password" class="form-control" name="password" required>
                    </div>

                    <div class="form-group mt-3">
                        <div class="checkbox">
                            <label for="remember">
                                <input type="checkbox" name="remember" id="remember"> یادآوری ورود
                            </label>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <%- captcha %>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">
                            ورود
                        </button>
                        <a href="/auth/google" class="btn btn-danger">ورود با اکانت گوگل</a>
                        <a class="btn btn-link" href="/auth/recovery/account">
                            رمز عبور را فراموش کردم!
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>