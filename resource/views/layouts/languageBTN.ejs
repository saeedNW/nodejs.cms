<div class="btn-group">
    <button type="button" class="btn btn-secondary dropdown-toggle me-3" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
        <%= userLanguage %>
    </button>
    <div class="dropdown-menu mt-5">
        <a class="dropdown-item <%= userLanguage === "fa" ? "disabled" : "" %>" href="/language/fa">fa</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item <%= userLanguage === "en" ? "disabled" : "" %>" href="/language/en">en</a>
    </div>
</div>